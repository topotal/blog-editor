{
  "name": "blog-editor",
  "version": "1.0.0",
  "description": "sawa-zen.comの記事投稿ページ",
  "main": "index.js",
  "scripts": {
    "start": "npm run lite & npm run watch",
    "lite": "lite-server",
    "build": "npm run build:sass & npm run build:js",
    "build:js": "browserify src/js/App.js -t babelify --outfile public/js/bundle.js",
    "build:sass": "node-sass src/sass --output public/css",
    "watch": "npm run watch:sass & npm run watch:js",
    "watch:js": "watchify src/js/App.js -t babelify --outfile public/js/bundle.js",
    "watch:sass": "node-sass src/sass --output public/css -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sawa-zen/sawa-zen.com.git"
  },
  "author": "Takayoshi Sawada",
  "homepage": "sawa-zen.com",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.0",
    "babel-plugin-transform-react-jsx": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^11.0.0",
    "lite-server": "^2.2.2",
    "lodash": "^4.15.0",
    "marked": "^0.3.6",
    "node-sass": "^3.2.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-html-parser": "^1.0.3",
    "superagent": "^2.2.0",
    "watchify": "^3.7.0"
  }
}
